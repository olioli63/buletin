{% extends 'base.html.twig' %}

{% block title %}Passants index{% endblock %}

{% block body %}
    <h1>Passants index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Observation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for passant in passants %}
            <tr>
                <td>{{ passant.id }}</td>
                <td>{{ passant.Observation }}</td>
                <td>
                    <a href="{{ path('passants_show', {'id': passant.id}) }}">show</a>
                    <a href="{{ path('passants_edit', {'id': passant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('passants_new') }}">Create new</a>
{% endblock %}
